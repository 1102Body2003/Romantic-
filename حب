<body>
    <h1>ازيك يا شوشو</h1>
    <div class="message" id="message"></div>

    <script>
        // قائمة الرسائل الرومانسية بتبجيل لشوشو أو شيماء
        const messages = [
            "وحشتيني يا شوشو، كل لحظة بعدك بتسحب من قلبي!",
            "كل ما بشوفك يا شيماء، الدنيا بتنور بنورك يا حياتي.",
            "إنتي العسل اللي بيحلي حياتي كل يوم، شوشو.",
            "بحبك بزيادة يا أجمل حاجة في حياتي، شيماء!",
            "شوفك كده، بحس إن الدنيا كلها ورد لما تكوني جنبي يا شوشو."
        ];

        // اختيار رسالة عشوائية
        const randomMessage = messages[Math.floor(Math.random() * messages.length)];
        document.getElementById('message').innerText = randomMessage;
    </script>
</body>
